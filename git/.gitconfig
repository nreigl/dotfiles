[include]
  path = ~/.gitconfig.local
[core]
  editor = $EDITOR
  excludesfile = ~/.gitignore
  ignorecase = false
  abbrev = 12
  # Enable git-delta for better diffs
  pager = delta
[alias]
  # Logging
  l  = log --graph --oneline --decorate
  ld = log --graph --pretty=format:'%C(yellow)%h%C(bold white red)%d%Creset %s %C(bold green)%cr %Creset%C(white)%an' --abbrev-commit --date=relative
  ll = log --stat --decorate --source -p
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  
  # Common operations
  s = status -sb
  a = add
  aa = add --all
  ap = add --patch
  c = commit
  cm = commit -m
  ca = commit --amend
  cam = commit --amend --no-edit
  
  # Branching
  co = checkout
  cob = checkout -b
  br = branch
  brd = branch -d
  
  # Stashing
  st = stash
  stp = stash pop
  stl = stash list
  
  # Reset & Clean
  undo = reset HEAD~1 --mixed
  unstage = reset HEAD --
  clean-branches = !git branch --merged | grep -v '\\*\\|main\\|master' | xargs -n 1 git branch -d
  
  # Info
  last = log -1 HEAD
  contributors = shortlog --summary --numbered
  today = log --since=midnight --author='Nicolas Reigl' --oneline
[color]
  ui = auto
[diff]
  algorithm = patience
  colorMoved = zebra
[push]
  default = current
[commit]
  verbose = true
  # template = ~/.gitmessage
[fetch]
  prune = true
[rebase]
  autosquash = true
[pager]
  branch = false
[user]
	name = Nicolas Reigl
	email = nicolas.reigl@gmail.com
[pull]
	rebase = false
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[delta]
  navigate = true
  light = false
  side-by-side = false
  line-numbers = true
  features = decorations

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
  hunk-header-decoration-style = cyan box ul

[interactive]
  diffFilter = delta --color-only
