{
    "editor.fontSize": 13,
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": true,
    "editor.tabCompletion": "on",
    "editor.suggestSelection": "first",
    "editor.wordWrap": "wordWrapColumn",
    "eslint.defaultFormatter": "esbenp.prettier-vscode",
    "eslint.format.enable": true,
    "eslint.packageManager": "yarn",
    "eslint.quiet": true,
    "eslint.run": "onSave",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.exclude": {
        "**/node_modules": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "**/Pods": true
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "python.languageServer": "Jedi",
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "terminal.external.osxExec": "WezTerm.app",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vs-seti",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.location": "default",
    "r.lsp.enabled": true,
    "r.lsp.path": "/usr/local/bin/R",
    "r.rterm.mac": "/usr/local/bin/R",
    "r.bracketedPaste": true,
    "r.plot.useHttpgd": true,
    "[r]": {
        "editor.defaultFormatter": "REditorSupport.r",
        "editor.formatOnSave": false,
        "editor.tabSize": 2
    },
    "[rmd]": {
        "editor.defaultFormatter": "REditorSupport.r",
        "editor.tabSize": 2
    },
    "matlab.mlintpath": "/Applications/MATLAB_R2024b.app/bin/maca64/mlint",
    "matlab.matlabpath": "/Applications/MATLAB_R2024b.app/bin/matlab",
    "[matlab]": {
        "files.encoding": "utf8",
        "editor.tabSize": 4
    },
    "terminal.integrated.fontFamily": "monospace",
    "workbench.settings.applyToAllProfiles": [
        "editor.fontFamily"
    ],
    "chatgpt.openOnStartup": true,
    "workbench.activityBar.orientation": "vertical"
}